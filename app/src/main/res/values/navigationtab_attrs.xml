<?xml version="1.0" encoding="utf-8"?>
<resources >
    <attr name="NavigationButtonTabStyle" format="reference" />
    <attr name="errorViewStyle" format="reference" />
    <declare-styleable name="NavigationButtonTab" >
        <attr name="tabLabelText" format="string" />         <!-- tab标签 -->
        <attr name="tabLabelTextSize" format="dimension" />  <!-- tab标签字体大小 -->
        <attr name="tabLabelTextColor" format="color" />     <!-- tab标签字体颜色 -->
        <attr name="tabIconDrawable" format="reference" /> <!-- tab的图标 -->
        <attr name="tabIndicatorDrawable" format="reference|color" /> <!-- tab的指示器drawable -->
        <attr name="enableTabIndicator" format="boolean" />       <!-- 是否激活指示器显示 -->
        <attr name="badgeDrawable" format="reference|color" /> <!-- 消息标识图标 -->
    </declare-styleable >
</resources >
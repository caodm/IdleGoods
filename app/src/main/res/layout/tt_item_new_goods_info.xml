<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_c11"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginTop="45.0dip"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/tt_goods_info_owner_user_image_default_bg"
            android:layout_width="62.0dip"
            android:layout_height="62.0dip"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="14.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/tt_avator_dress_info_bg" />

        <com.cdm.idlefish.view.CircleImageView
            android:id="@+id/tt_goods_info_owner_user_image"
            android:layout_width="54.0dip"
            android:layout_height="54.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="18.0dip"
            android:src="@drawable/tt_default_user_image" />

        <TextView
            android:id="@+id/tt_goods_info_owner_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94.0dip"
            android:layout_marginTop="53.0dip"
            android:textColor="@color/gray_c5"
            android:text="title"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:id="@+id/tt_goods_info_owner_user_image_topline"
            android:layout_width="192.0dip"
            android:layout_height="15.0dip"
            android:layout_marginLeft="94.0dip"
            android:layout_marginTop="30.0dip"
            android:background="@color/blue"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/tt_goods_info_owner_user_image_bg"
            android:layout_width="102.0dip"
            android:layout_height="70.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tt_goods_info_flag"
            android:layout_width="45.0dip"
            android:layout_height="30.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="45.0dip"
            android:background="@drawable/tt_goods_flag_auction"
            android:gravity="center|top"
            android:paddingTop="5.0dip"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:text="积分兑换"
            android:textSize="@dimen/image_size_notice" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/split_width"
        android:background="@color/split" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tt_goods_info_goods_image_layout"
            android:layout_width="fill_parent"
            android:layout_height="110.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tt_goods_info_goods_image_1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/grey_807c78"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/tt_goods_info_goods_image_2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:background="@color/grey_807c78"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/tt_goods_info_goods_image_3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="1.0"
                android:background="@color/grey_807c78"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tt_goods_info_goods_image"
            android:layout_width="214.0dip"
            android:layout_height="140.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@color/red"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip"
            android:minHeight="40.0dip">

            <TextView
                android:id="@+id/tt_goods_info_goods_des"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_toLeftOf="@+id/tt_item_goods_info_operation"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/gray_c5"
                android:text="qqqqq"
                android:textSize="@dimen/text_size_normal" />

            <Button
                android:id="@+id/tt_item_goods_info_operation"
                android:layout_width="80.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/tt_goods_item_cando"
                android:focusable="false"
                android:textColor="@color/white"
                android:text="优质商品"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="5.0dip" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:switch="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/login_bg"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/login_user_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/login_user_bg"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <ImageView
            android:id="@+id/login_user_name_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_username_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />
        <com.cdm.idlefish.view.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/login_user_name_icon"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:hint="用户名"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_user_pw"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/login_user_bg"
        android:layout_below="@+id/login_user_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >
        <ImageView
            android:id="@+id/login_user_pw_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_userpw_icon"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            />

        <com.cdm.idlefish.view.ClearEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/login_user_pw_icon"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:textColor="@android:color/white"
            android:hint="密码"
            android:maxLength="16"
            android:inputType="textPassword"
            tools:ignore="TextFields"
            />
    </RelativeLayout>

    <com.cdm.idlefish.view.Switch
        android:id="@+id/switch_rember_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_user_pw"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        switch:duration="250"
        switch:spotOffColor="#e0e0e0"
        switch:switchOffColor="#ffffff"
        switch:switchOffStrokeColor="#000000"
        switch:spotPadding="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/switch_rember_pw"
        android:layout_below="@+id/login_user_pw"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="4dp"
        android:textColor="@android:color/white"
        android:text="记住密码"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_user_pw"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="14dp"
        android:textColor="@android:color/white"
        android:text="忘记密码"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@mipmap/btn_login_bg"
        android:layout_below="@+id/switch_rember_pw"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="login"
        />

    <TextView
        android:id="@+id/register_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:text="新用户注册"
        />

    <ImageView
        android:id="@+id/login_line_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_line"
        android:layout_below="@+id/register_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/login_or_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_below="@+id/register_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="or"
        />

    <RelativeLayout
        android:id="@+id/loging_third_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/login_or_text"
        android:layout_marginTop="25dp">

        <RelativeLayout
            android:id="@+id/loging_qq_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_qq_bg"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_qq_icon"
                android:layout_centerInParent="true"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loging_wei_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/loging_qq_layout"
            android:layout_marginLeft="40dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_weibo_bg"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_weibo_icon"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
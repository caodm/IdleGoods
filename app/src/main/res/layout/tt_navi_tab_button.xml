<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/tt_tab_splite"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/split_width" />

    <RelativeLayout
        android:id="@+id/tab_btn_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/tab_btn_default"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_centerHorizontal="true"
            android:contentDescription="default_tab_image"
            android:scaleType="centerInside"
            android:src="@drawable/tt_tab_shouye_nor" />

        <TextView
            android:id="@+id/tab_unread_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-8.0dip"
            android:layout_toRightOf="@id/tab_btn_default"
            android:background="@drawable/tt_message_notify"
            android:gravity="center"
            android:paddingLeft="-4.0dip"
            android:paddingRight="-4.0dip"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="@dimen/image_size_notice"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tab_btn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab_btn_default"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6.0dip"
            android:gravity="center"
            android:text="@string/tab_firstpage"
            android:textSize="@dimen/image_size_notice" />
    </RelativeLayout>
</LinearLayout>
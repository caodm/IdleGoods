<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="120.0dip"
        android:layout_height="150.0dip">

        <TextView
            android:id="@+id/tt_item_goods_category_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16.0dip"
            android:textColor="@color/gray_c5"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/tt_item_goods_category_title_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tt_item_goods_category_title_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip"
            android:textColor="@color/gray_c7"
            android:textSize="@dimen/text_size_notice" />

        <ImageView
            android:id="@+id/tt_item_goods_category_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tt_item_goods_category_title_des"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10.0dip" />
    </RelativeLayout>
</RelativeLayout>